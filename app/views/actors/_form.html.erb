<%= form_with model: @actor, local: true do |form| %>

  <% if @actor.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@actor.errors.count, "error") %> prohibited this actor from being saved:
      </h2>
      <ul>
        <% @actor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :dob %><br>
    <%= form.date_field :dob, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>