<h1>All Actors</h1>

<table>
  <% @actors.each do |actor| %>
    <tr>
      <td><%= link_to actor.name, actor_path(actor) %></td>
      <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
      <td><%= link_to 'Delete', actor_path(actor),
                      method: :delete,
                      data: { confirm: "Are you sure you wish to delete the actor '#{actor.name}?'" } %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'Add Actor', new_actor_path %>
