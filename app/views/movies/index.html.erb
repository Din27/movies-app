<h1>All Movies</h1>

<table>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, movie_path(movie) %> (<%= movie.year %>)</td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      <td><%= link_to 'Delete', movie_path(movie),
                      method: :delete,
                      data: { confirm: "Are you sure you wish to delete the movie '#{movie.title}?'" } %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'Add Movie', new_movie_path %>