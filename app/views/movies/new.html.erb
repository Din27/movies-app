<h1>New Movie</h1>

<%= form_with scope: :movie, url: movies_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :year %><br>
    <%= form.select :year, 1990..(Date.today.year + 5), :selected => Date.today.year %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>